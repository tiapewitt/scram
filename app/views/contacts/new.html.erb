  <header class="mdl-layout__header mdl-layout--fixed-header mdl-layout__header--transparent">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title">Contact</span>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Scram</span>
    <nav class="mdl-navigation">
        <li class="mdl-navigation__link"><%= link_to 'All Submissions', submissions_path %></li>
          <li class="mdl-navigation__link"><%= link_to 'Featured', root_url %></li>
