
<main class="contact">
  <!-- Uses a transparent header that draws on top of the layout's background -->
<style>
.contact{
  background: url('http://s9.postimg.org/rw3fddzwf/trailjohnrock1.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}

.jumbotron{
  vertical-align: center;
  text-align: center;
  margin-top: 100px;
  opacity: 0.90;
    font-family: 'Open Sans Condensed', sans-serif;
  font-weight: 450px; 
  margin-left: 150px;
  margin-right: 150px;

}

.form-group {
  margin: 0 auto;
  width: 75%;
  margin-left: 98px;
}
</style>

 <!-- Split button -->
<div class="btn-group">
  <button type="button" class="btn btn-danger btn-lg">Contact</button>
  <button type="button" class="btn btn-danger btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
        <li><%= link_to 'All Submissions', submissions_path %></li>
          <li><%= link_to 'Featured', root_url %></li>
<!--           <li><%= link_to 'Donations', donations_path %></li> -->
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Contact', contacts_path %></li>
  </ul>
</div>
    
<div class="jumbotron">
  <div align="center">
  <h3>Send A Message to Us</h3>
</div>
  <div class="container">
<form class="form-group">
  <div align="center">
  <%= simple_form_for Contact.new :html => {:class => 'form-group' } do |f| %>
    <%= f.input :name, :required => true, placeholder: "Name" %>
    <%= f.input :email, :required => true, placeholder: "Email" %>
    <%= f.input :message, :as => :text, :required => true, placeholder: "Enter Message Here" %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
    <!--   <input align="center"> -->
      <%= f.button :submit, 'Send message', :class=> "btn btn-danger" %>
    </div>
  <% end %>
</form>
</div>
</div>
</div>
</div>
</div>
</main>

