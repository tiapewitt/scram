<div class="row">
	<% current_user.submissions.each do |submission| %>
  <div class="col-md-12">
    <div class="panel panel default">
      <div class="panel-heading">
        <h3><%= link_to submission.title, submission %></h3>
      </div>
      <div class="panel-body">
        by: <%= submission.user.username %><br>
        <p><%= submission.my_story[0..250] %>... <%= link_to "Read More...", submission %></p>
      </div>
      <div class="panel-footer">
        <%= link_to 'Edit', edit_submission_path(submission), class: "btn btn-warning" %>
        Posted: <%= time_ago_in_words(submission.created_at) %> ago
        <%= link_to 'Destroy', submission, method: :delete, data:{confirm:'Are you sure?'}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
 <%end%>
</div>
<br>

<%= link_to 'New Submission', new_submission_path, class: "btn btn-default" %>